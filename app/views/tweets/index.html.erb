<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |e| %>
    <p>
        <div id=tweet>
        <%= image_tag 'icon.png' %>
        <%= "比嘉" %><br></br>
        <%= e.message %>
        <%= ((Time.current - e.tdate)/60).to_i %>分前
        <%=link_to '削除', "/tweets/#{e.id}", data: { turbo_method: :delete } %>
        <%=link_to '表示', "/tweets/#{e.id}" %>
        <%=link_to '編集', "/tweets/#{e.id}/edit" %>
        </div>
    </p>
<% end %>

<%= link_to 'ツイートする', new_tweet_path %>
